<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BaseStyle">
        <Setter Property="ItemsControl.Background" Value="White"/>
        <Setter Property="ItemsControl.Foreground" Value="Black"/>
    </Style>
    <Style x:Key="MenuStyle">
        <Setter Property="ItemsControl.Background" Value="#FFF0F0F0"/>
        <Setter Property="ItemsControl.BorderBrush" Value="#FFF0F0F0"/>
        <Setter Property="ItemsControl.Foreground" Value="Black"/>
    </Style>
    <Style x:Key="ToolBarStyle">
        <Setter Property="ItemsControl.Background" Value="#FFEEF5FD"/>
    </Style>
    <Style x:Key="RadioStyle">
        <Setter Property="ItemsControl.Foreground" Value="Black"/>
    </Style>
</ResourceDictionary>